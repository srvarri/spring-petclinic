pipeline {
    agent { label 'JDK11' }
        stages {
            stage('vcs') {
                   steps {
                       git branch: 'main',
                       url: 'https://github.com/srvarri/spring-petclinic.git'
                       
                    }
                }
        stage('JFROG configuration') {
                    steps {
                        rtMavenDeployer (
                            id: 'MAVEN_DEPLOYER',
                            serverId: 'JFROG_SPC',
                            releaseRepo: 'qt-libs-release-local',
                            snapshotRepo: 'qt-libs-snapshot-local'
                        )
                    }
                }
                
        stage('maven build') {
                    steps {
                        rtMavenRun (
                            tool: 'MAVEN', // Tool name from Jenkins configuration
                            pom: 'pom.xml',
                            goals: 'clean install',
                            deployerId: "MAVEN_DEPLOYER"
                            
                        )
                    }
                }
                
        stage ('publish build info') {
                    steps {
                        rtPublishBuildInfo (
                            serverId: "JFROG_SPC"
                        )
                    }
                }
        
    }
}